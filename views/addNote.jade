extends template.jade

block content
    form(method='POST', action='/notes')
        .input-group
            label(for='title') Title
            input#title(type='text', name='title')
            br
        .input-group
            label(for='note') Note
            input#note(type='text' name='note')
            br
        .input-group
            input(type='submit', value='Save')
